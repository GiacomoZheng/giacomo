		V.×: ∈ symbol, ; !
		V.F: ∈ field,

		∀v: ∈ V,
		∀a: ∈ V.F, a V.× v = v V.× a ∈ V, ; closure, with the closure in abelian group
		V.F.1 V.× v = v, ; identity
		∀b: ∈ V.F, (a V.F.× b) V.× v = a V.× (b V.× v), ; compatibility

		∀u: ∈ V, a V.× (u V.+ v) = (a V.× u) V.+ (a V.× v), ; distribution
		(a V.+ b) V.× v = (a V.× v) V.+ (c V.× v),
	); + to deal with the temporary
	[ property: ... ]
		; about alias
		; end

		; + generalize
			subspace(∀V: ∈ vector_space):
			(
				⊆ vector_space,
				∀S: ∈ subspace(V),
				&S.+& = &V.+&,
				S.0 = V.0,
				&S.×& = &V.×&,
				S.F = V.F
			),

			generate_by[∀G: ∈ vector_space](∀S: ⊆ G): = ∩[∀H: ∈ subspace(G), S ⊆ H](H)
		; end

		independent(∀V: ∈ vector_space):
		(
			⊆ set,
			∀I: ∈ independent(V),
			∀c[∀α: ∈ I]: ∈ V.F,
			V.+[∀α: ∈ I](c[α] V.× α) = V.0 ⇒ c[∀α: ∈ I] = V.F.0 ; ? as an abelian group, order of addition is unimportant
		),

		combination[∀V: ∈ vector_space](∀S: ∈ V):
		(
			⊆ ◉,
			∀x: ∈ combination[V](S),
			∃c[∀α: ∈ S]: ∈ V.F,
			x = V.+[∀α: ∈ I](c[α] V.× α) ; ?
		),

		span[∀V: ∈ vector_space](S): = {∀x: ∈ combination[V](S)}

