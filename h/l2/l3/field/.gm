: ; field
(
	⊆ commutative_ring,
	⊆ skew_field,

	[ chaim: field ⊆ integral_domain ⊆ commutative_ring ]

	[ attributes ]
		; about alias
			monomorphism: = extension,
		; end
		
		; about generalizing
			sub(∀L: ∈ field):
			(
				⊆ field,

				∀K: ∈ sub(L),
				K ⊆ L,
				K.0 = L.0,
				K.1 = L.1,
				&K.+& = &L.+&,
				&K.×& = &L.×&
			),
		; end

		; about inheritance
			ker(∀f: ∈ homomorphism): = ring.ker(f),
		; end

	; waitting for rewriting
		Q[∀K: ∈ field](∀x: ∈ ◉): = {p(x)/q(x)}[∀{p(x), q(x)}: ⊆ P[K](x), !(q(x) = 0)], ; !
		[ a field indeed ]

		algebraic[∀L: ∈ field](∀K: ∈ sub(L)): ; extension from the root
		(
			⊆ ◉,

			∀α: ∈ algebraic[L](K),
			α ∈ L,
			∀x: ∈ ◉, ∃f(x): ∈ P[K](x) \ {P[K](x).0}, f(α) = 0
		),

		minimal_polynomial[∀R: ∈ K](∀α: ∈ ◉): ; !
		(
			(∃L: K ∈ sub(L), α ∈ L) ⇒
			(
				∀x: ∈ ◉, ; !
				K': = P[K](x),
				∃f(x): ∈ K' \ K'.0, f.a[deg(f)] = 1, f(α) = 0,
				= "the polynomial with the minimal degree",
			)
		),
		[ this function is well-defined as result is unique ]

		splitting_field: ; !
		(
			∈ function,

			∀K: ∈ field,
			∀x: ∈ ◉, ; !
			∀f(x): ∈ P[K](x),
			L: = ∩[]({( ; !
				∈ field,
				S: = {m}[∀m: ∈ N, m < deg(f)], ; with numbers of them is deg(f)
				∃a[∀n: ∈ S]: ∈ L,
				×[∀n: ∈ S](x - a[n]) = f(x)
			)}),
			
			splitting_field(f) = L
		),
),