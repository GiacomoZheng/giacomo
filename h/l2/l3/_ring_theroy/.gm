ideal(∀R: ∈ ring): ; + after the semigroup
(
	"two-side ideal",
	⊆ abelian_group, ; ? rng

	∀I: ∈ ideal(R),
	I ∈ group.sub(R), ; in fact, as abelian, I ∈ normal(R),
	∀x: ∈ I, ∀r: ∈ R, x R.× r ∈ I, r R.× x ∈ I,

	×: = &R.×&
),
; idealizer
I[∀R: ∈ ring](∀τ: ⊆ R):
(
	∈ ideal(R),
	
	τ ⊆ I[R](τ) ; generators
),

unit(∀R: ∈ ring): ; in wiki, there is no requirement to be commutative
(
	⊆ ◉,

	∀x: ∈ unit(R),
	×: = &R.×&,
	∃y: ∈ R, x × y = y × x = R.1 ; commutative here
),
; this can be a set, at least when R is finite

P[∀R: ∈ ring](∀x: ∈ ◉): ; !
(
	∈ polynomial_ring,
	P[R](x).x = x,
	P[R](x).R = R
),
deg(∀Poly: ∈ polynomial_ring): = Poly.degree, ; 0 has no degree

linear_poly(∀P[R](x): ∈ polynomial_ring): = {f(x)|∀f(x): ∈ P[R](x), deg(f(x)) = 1},

irreducible(∀R: ∈ ring):
(
	⊆ ◉,
	∀ir: ∈ irreducible(R),
	×: = &R.×&
	ir ∈ R,
	∀(d1, d2): ∈ R, d1 × d2 = ir ⇒ ∃(d1 ∈ unit(R), d2 ∈ unit(R))
),

root[∀R: ∈ ring](∀f: (f(x) ∈ P[R](x))): ; !
(
	"this definition restrict the f(x) as a polynomial under R",
	⊆ ◉,

	∀α: ∈ root[R](f),
	α ∈ R, ; important
	f(α) = R.0
),
; root[R](f) can be a set, I don't know how to prove it

principle_ideal(∀R: ∈ ring):
(
	⊆ ideal(R),

	∀P: ∈ principle_ideal(R),
	∃g: ∈ P, P = I[P]({g})
),

maximal_ideal(∀R: ∈ ring):
(
	⊆ ideal(R),

	∀M: ∈ maximal_ideal(R),
	!(M = R),
	∀Id: ∈ ideal(R),
	M ⊆ Id ⇒ ∃(Id = R, Id = M)
),

prime_ideal(∀R: ∈ ring):
(
	⊆ ideal(R),

	∀P: ∈ prime_ideal,
	∀{a, b}: ⊆ R,
	a R.× b ∈ P ⇒ ∃(a ∈ P, b ∈ P)
),


