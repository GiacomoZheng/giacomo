{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tree",
            "type": "shell",
            "command": "Set-Location C:\\Users\\admin\\Documents\\GitHub\\gm; tree | Out-File tree -Encoding utf8; py .vscode\\tree.py",
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "update-grammar",
            "type": "shell",
            "command": "vsce package --out gm.vsix; code-insiders --install-extension gm.vsix",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
    ]
}
